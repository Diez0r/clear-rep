@import './fonts.styl'

debug()
  background-color rgba(red, 0.33) !important

outlineDebug()
  outline 3px solid rgba(red, 0.33) !important

ghost()
  content ''
  position absolute
  top 0
  right 0
  bottom 0
  left 0

hover()

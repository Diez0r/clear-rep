@import 'tools.styl'

[v-cloak]
  display none !important

html
body
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  overscroll-behavior none
  color $tDarkBlue


html
  width 100vw
  height 100vh


body
  width 100%
  height 100%
  min-height 100%
  max-height 100%

*
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  text-rendering optimizeLegibility

::selection
  background-color $greyStroke
  color $whiteFC

a
  color $tDarkBlue
  text-decoration none

.js-voa
  transition-property transform, opacity
  transition-timing-function $googleTiming
  transition-duration 444ms
  transition-delay 66.6ms

.js-voa-start
  opacity 0
  transform translateY(25px)

.custom-scrollbar
  overflow-y auto !important
  &::-webkit-scrollbar
    width 5px
  &::-webkit-scrollbar-track
    background-color $greyBorder
  &::-webkit-scrollbar-thumb
    background $cDarkBlue


// стилёк для нижнего подчеркивания текста

.underline
  position relative

  &::before
    content ''
    position absolute
    bottom rem(3)
    left 0
    width 100%
    height 1px
    background-color currentColor

    +sm()
      bottom rem(4)
    +xs()
      bottom rem(4)
    +mb()
      bottom rem(3)

// Фиксим отображение инпутов
// следующие две группы селекторов убирают стрелки у инпутов с типом number
input::-webkit-outer-spin-button
input::-webkit-inner-spin-button
  -webkit-appearance none
  margin 0

input[type='number']
input[type="number"]:hover
input[type="number"]:focus
  -moz-appearance textfield
  margin 0

.group
  display flex
  flex-wrap wrap
  justify-content space-between
  width 100%

.new-row
  width 100%
  flex-shrink 0
  flex-grow 1
  display flex
  flex-wrap wrap
  justify-content space-between

.inputs
  width 100%

  &-wrapper
    width 100%

.form-title
  +gt-md()
    margin-bottom rem(50)
  +md()
    margin-bottom rem(40)
  +sm()
    margin-bottom rem(50)
  +mb()
    margin-bottom rem(35)
  +lt-mb()
    margin-bottom rem(30)
